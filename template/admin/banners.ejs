<html>
	<head>
		<title></title>
	</head>
	<body>
		<div class="page">
			<h2>banners</h2>
			<% include components/top.inc.ejs %>
			<div class="content-wrap">
				<% if(typeof mod_data == 'undefined'){ %>
					<div>
						<form action="" method="post">
							<p>标题：<input type="text" name="title" /></p>
							<p>描述：<textarea name="description"></textarea></p>
							<p>链接：<input type="text" name="href" /></p>
							
							<input type="submit" value="添加"/>
						</form>
					</div>
				<% } %>
				<table border="1" cellpadding="0" cellspacing="0" width="70%" style="text-align: center;" >
					<thead>
						<tr>
							<th>标题</th>
							<th>简介</th>
							<th>链接</th>
							<th>操作</th>
						</tr>
					</thead>
					<tbody>
						<% for(var i=0;i<banners.length;i++){ %>
							<tr>
								<td><%= banners[i].title %></td>
								<td><%= banners[i].description %></td>
								<td><a href="<%= banners[i].href %>" target="_blank"><%= banners[i].href %></a></td>
								<td>
									<a href="?act=mod&id=<%= banners[i].id %>">改</a>
									<a href="?act=del&id=<%= banners[i].id %>" onclick="return confirm('确定删除吗？')">删</a>
								</td>
							</tr>
						<% } %>
					</tbody>
				<% if(typeof mod_data != 'undefined'){ %>
					<div>
						<form action="?" method="post">
							<p><input type="hidden" name="mod_id" value="<%= mod_data.id %>" /></p>
							<p>标题：<input type="text" name="title" value="<%= mod_data.title %>" /></p>
							<p>描述：<textarea name="description"><%= mod_data.description %></textarea></p>
							<p>链接：<input type="text" name="href" value="<%= mod_data.href %>" /></p>
							<input type="submit" value="修改"/>
						</form>
					</div>
				<% } %>
			</div>
		</div>
	</body>
</html>










