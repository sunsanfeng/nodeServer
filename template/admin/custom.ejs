<html>
	<head>
		<title></title>
		<style type="text/css">
			.img_src{
				width: 50px;
				height: 50px;
				border-radius: 50%;
			}
			.mod_img{
				width: 150px;
				height: 150px;
			}
		</style>
	</head>
	<body>
		<div class="page">
			<h2>用户评价管理</h2>
			<% include components/top.inc.ejs %>
			<div class="content-wrap">
				<% if(typeof mod_data == 'undefined'){ %>
					<div>
						<form action="" method="post" enctype="multipart/form-data">
							<p>标题：<input type="text" name="title" /></p>
							<p>描述：<textarea name="description"></textarea></p>
							<p>头像：<input type="file" name="src" /></p>
							<input type="submit" value="添加"/>
						</form>
					</div>
				<% } %>
				<table border="1" cellpadding="0" cellspacing="0" width="70%" style="text-align: center;" >
					<thead>
						<tr>
							<th>标题</th>
							<th>简介</th>
							<th>头像</th>
							<th>操作</th>
						</tr>
					</thead>
					<tbody>
						<% for(var i=0;i<evaluation.length;i++){ %>
							<tr>
								<td><%= evaluation[i].title %></td>
								<td><%= evaluation[i].description %></td>
								<td><img class="img_src" src="<%= evaluation[i].src %>" /></td>
								<td>
									<a href="?act=mod&id=<%= evaluation[i].id %>">改</a>
									<a href="?act=del&id=<%= evaluation[i].id %>" onclick="return confirm('确定删除吗？')">删</a>
								</td>
							</tr>
						<% } %>
					</tbody>
					<% if(typeof mod_data != 'undefined'){ %>
						<div>
							<form action="?" method="post">
								<p><input type="hidden" name="mod_id" value="<%= mod_data.id %>" /></p>
								<p>标题：<input type="text" name="title" value="<%= mod_data.title %>" /></p>
								<p>描述：<textarea name="description"><%= mod_data.description %></textarea></p>
								<p>原头像：<img class="mod_img" src="<%= mod_data.src %>" /></p>
								<p>修改头像：<input type="file" name="src" value="<%= mod_data.src %>" /></p>
								<input type="submit" value="修改"/>
							</form>
						</div>
					<% } %>
			</div>
		</div>
	</body>
</html>










